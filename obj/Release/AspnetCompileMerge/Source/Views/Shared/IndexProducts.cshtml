@model IEnumerable<JazzCPO5.Models.ProductTable>

@{
    ViewBag.Title = "IndexProducts";
}

<style>
    img {
        width: 50px;
        height: 50px;
    }
</style>



@*<h2>Index</h2>*@

<p>
    @Html.ActionLink("Create New", "Create", "ProductTables", null, new { @class = "classname" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Image)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Image)*@
            <img src="@item.Image">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "ProductTables", new { id=item.ProductID }, new { @style ="color:white;" }) |
            @*@Html.ActionLink("Details", "Details", "ProductTables", new { id=item.ProductID }, null) |*@
            @Html.ActionLink("Delete", "Delete", "ProductTables", new { id=item.ProductID }, new { @style = "color:white;" })
        </td>
    </tr>
}

</table>
